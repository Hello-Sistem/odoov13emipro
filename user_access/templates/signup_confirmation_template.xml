<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Confirmation Email Template -->
    <template id="signup_confirmation">
        <t t-call="website.layout">
            <div class="container">
                <div class="signup-common-div">
                    <div class="block te_user_template_common text-center">
                        <img class="te_user_access_img" src="/user_access/static/src/img/Email-Verification.png" />
                        <h4 class="text-center">To login please check your email to complete account verification.</h4>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Confirmation Quote Template -->
    <template id="quote_confirmation">
        <t t-call="website.layout">
            <div class="container">
                <div class="signup-common-div">
                    <div class="block te_user_template_common text-center">
                        <img class="te_user_access_img" src="/user_access/static/src/img/Email-Verification.png" />
                        <h4 class="text-center">Your Quotation has been saved successfully. <a href="/my/quotes">View your saved quotes.</a></h4>
                        <h4 class="text-center">We have also sent a copy of your email.</h4>
                    </div>
                </div>
            </div>
        </t>
    </template>


    <!-- Not Confirmed Email Template -->
    <template id="signup_not_valid_user">
        <t t-call="website.layout">
            <div class="container">
                <div class="signup-common-div">
                    <div class="block te_user_template_common text-center">
                        <img class="te_user_access_img" src="/user_access/static/src/img/Account-Not-Validated.png" />
                        <h4 class="text-center text-danger">You have not verifiy your account</h4>
                        <p class="text-center">Click on <i>Confirm Account</i> link to activate you account
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>

    <!-- Account Activate successful Message -->
    <template id="user_valid" name="User valid Message notification">
        <t t-call="website.layout">
            <div class="container">
                <div class="signup-common-div">
                    <div class="block te_user_template_common text-center">
                        <img class="te_user_access_img" src="/user_access/static/src/img/Account-Validated.png" />
                        <h4 class="text-center">Your account has been validated.</h4>
                        <h4 class="text-center">You can now login with your email and password using the link below.</h4>
                        <p class="text-center">
                            <a class="btn btn-primary te_theme_button" href="/web/login">Login</a>
                        </p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>